<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weibo.recycleview">
    //震动权限
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Activity_RecyclerView" />
        <activity android:name=".activity.Activity_FlexBox" />
        <activity android:name=".activity.Activity_Toolbar"></activity>
        <activity android:name=".activity.Activity_BottomSheet" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity"></activity>
    </application>

</manifest>